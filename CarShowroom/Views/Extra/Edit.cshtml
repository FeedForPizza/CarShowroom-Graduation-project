@model CarShowroom.Entities.Extra

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<head>
    <link rel="stylesheet" href="/css/PagesStyle.css">
</head>

<body>
    <div class="containerCreateCar">
<h2>Редактиране</h2>

<h4>Екстра</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ExtraId" />
            <div class="form-group">
                <label asp-for="ExtraName" class="control-label"></label>
                <input asp-for="ExtraName" class="form-control" />
                <span asp-validation-for="ExtraName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <br>
            <div class="button-container">
            <div class="form-group">
                <input type="submit" value="Запази" class="btn" />
            </div>
            
    <a href="@Url.Action("Index", "Extra")"  class="btnBackToMain">Към списък с екстри</a>
</div>
        </form>
    </div>
</div>


</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>