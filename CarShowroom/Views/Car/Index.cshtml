@model IEnumerable<CarShowroom.Entities.Car>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





<style>
    body {
        background-color: rgba(45, 89, 134, 0.8);
    }
    .car-list {
    list-style: none;
    padding: 0;
    display: flex;
}
.btn {
  display: inline-block;
    padding: 10px 20px;
    background-color:  rgba(45, 89, 134, 0.9);
    color: white;
    text-decoration: none;
    border-radius: 30px;
    transition: background-color 0.3s ease;
}
.btn:hover {
    background-color:rgb(198, 217, 236);
}
.button-container {
    display: flex;
    gap: 10px;
}
.car-item {
    margin-right: 20px;
}

.car-image {
    position: relative;
    width: 200px;
    height: 200px;
    overflow: hidden;
    background-color: white;
}

.car-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
}

.car-details {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 10px;
    background-color: rgba(0, 0, 0, 0.7);
    color: #fff;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.car-details:hover {
    opacity: 1;
}

.model-name {
    margin: 0;
}

.price {
    margin: 5px 0;
}

}

    

</style>
<body>
    <br>
@if (User.Identity.IsAuthenticated)
    {
<div class="button-container">
    <button onclick="location.href='@Url.Action("Create")'" class="btn">Create New</button>
    <button onclick="location.href='@Url.Action("DetailInformation")'" class="btn">Детайлна информация</button>
    
</div>
    }
    <br>
<ul class="car-list">
    @foreach (var car in Model)
    {
        <li class="car-item">
            <a href="/Car/Details/@car.CarId" class="car-link">
                <div class="car-image">
                    <img src="@car.PictureUrl" alt="@car.Model">
                    <div class="car-details">
                        <h3 class="model-name">@car.Model</h3>
                        <p class="price">@car.OriginalPrice</p>
                    </div>
                </div>
            </a>
        </li>
    }
</ul>

</body>